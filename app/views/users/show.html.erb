<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="media text-center">
        <div class="media-body">
          <h2 class="media-heading text-center"><%= @user.name %></h2>
          <small >
            <%= pluralize(@user.bookmarks.count, 'bookmark') %>,
            <%= pluralize(@user.likes.count, 'like') %>
          </small>
        </div>
      </div>
    </div>
  </div>
  <br />
  
  <% if @user.bookmarks.count > 0 %>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h3> My Bookmarks </h3>
        <% @user_bookmarks.each do |bookmark| %>
          <div class="thumbnail">
            <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>

            <% if bookmark.title != nil %>
              <b> <%= "#{bookmark.title}" %> </b>
            <% else %>
              <b> Bookmark title is not available for preview </b> <br />
            <% end %>

            <%= link_to "#{bookmark.url}", bookmark.url, target: _blank %> 

            <% if policy(bookmark).destroy? %>
              &nbsp; <i> <%= link_to "Delete", [bookmark.topic, bookmark], method: :delete,  class: 'btn, btn-danger', 
              data: {confirm: "Are you sure you want to delete this bookmark?"} %> <i>
            <% end %>

            <% if bookmark.image != nil %>
              <%= image_tag(("#{bookmark.image}"), size: "240").html_safe %>
            <% else %>
              <%= image_tag("no-preview.png", size: "240", :alt => "No Preview Available") %>
            <% end %>
            <%= link_to "##{bookmark.topic.title}", bookmark.topic(:topic_id) %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

 <% if @user.likes.count > 0 %>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h3> Liked Bookmarks </h3>
          <% @user_likes.each do |like| %>
            <p> <%= link_to "#{like.bookmark.url}", like.bookmark.url%> 
              <%= render partial: 'likes/like', locals: { bookmark: like.bookmark } if current_user %>
            <p>
          <% end %>
      </div>
    </div>
  <% end %>

</div>

