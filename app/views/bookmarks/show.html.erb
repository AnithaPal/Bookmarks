<br/>
<div class="container">
  <div class="row col-md-2">
    <%= link_to  topic_path(@topic), class: 'btn btn-primary' do %>
       <i class="glyphicon glyphicon-arrow-left"> </i>&nbsp; 
    <% end %>  
  </div> 
  <div class="row">
    <div class="col-md-12">
      <h3 class="text-center"> <%= @bookmark.url%> </h3>
      <div class="btn-group-justify text-center"> 
        <button>
          <%= render partial: 'likes/like', locals: {bookmark: @bookmark} %> 
        </button>
    
      <% if policy(@bookmark).edit? %>
        <button>
          <%= link_to edit_topic_bookmark_path, class: 'btn btn-primary'  do %>
            <i class="glyphicon glyphicon-pencil"> </i>&nbsp; 
          <% end %>
        </button>
        <button>
          <%= link_to [@topic, @bookmark], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this bookmark'} do%>
            <i class="glyphicon glyphicon-trash"> </i>&nbsp; 
          <% end %>  
        </button>
      <% end %>
      </div>
    </div>
    <div class="col-md-2">
    </div>
  </div>

</div>