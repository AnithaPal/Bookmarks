<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3> <%= @bookmark.url%> </h3>
      <p> <%= render partial: 'likes/like', locals: {bookmark: @bookmark} %> </p>
    </div>
  </div>
  <div class="row">
    <%= link_to "Back", topic_path(@topic), class: 'btn btn-success' %>
    <% if policy(@bookmark).edit? %>
      <%= link_to "Edit bookmark", edit_topic_bookmark_path, class: 'btn btn-success' %>
      <%= link_to "Delete bookmark", [@topic, @bookmark], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this bookmark'} %>
    <% end %>  
  </div>
</div>