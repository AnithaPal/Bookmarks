<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="text-center">All Topics</h1>
      <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading text-justify">
          <%= link_to topic.title, topic %>
          </h4>
        </div>
      </div>
      <% end %>
      <%= will_paginate @topics %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>


