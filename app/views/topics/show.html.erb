<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%= link_to "Edit Topic", edit_topic_path , class: 'btn btn-success' %>
      <%= link_to "Delete Topic ", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you wnat to delete this topic and bookmarks under this topic?'} %>
      <%= link_to "Back", topics_path,  class: 'btn btn-success' %>
      <%= link_to "Add new Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
    </div>  
    <div class="col-md-6 col-md-offset-2">
      <h1 class="text-center"> <%= @topic.title %> </h1>
      <% @topic.bookmarks.each do |bookmark| %>
       <h4> <%= link_to "#{bookmark.url}", topic_bookmark_path(bookmark.topic, bookmark) %> </h4>
      <% end %>
    </div>
  </div>
</div>