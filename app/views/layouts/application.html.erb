<!DOCTYPE html>
<html>
  <head>
    <title>Bookmarks</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <header class="row">
        <ul class="nav nav-tabs navbar-default navbar-inverse navbar-fixed-top col-md-12">
          <li class="img-responsive"> <%= link_to image_tag("http://i.imgur.com/oEGd43ht.png?1"), root_path %> </li>
          <li> <%= link_to "Bookmarks", root_path %> </li>
          <li> <%= link_to "About", welcome_about_path %> </li>
          <div class="pull-right user">
            <% if current_user %>
              <li> Hello <%= current_user.email %> <%= link_to "Sign out", destroy_user_session_path, method: :delete %> </li>
            <% else %>
              <li class="navbar-text"> <%= link_to "Sign in", new_user_session_path %> </li>
              <li class= "navbar-text"> <%= link_to "Sign up", new_user_registration_path %> </li>
            <% end %>  
          </div>  
        </ul>
      </header>
      <div class="row">
        <div class = "col-md-12">
        <% if flash[:notice] %>
          <div class="alert alert success">
            <button type="button" class="close" data-dismiss="alert">&times; </button>
            <%= flash[:notice] %>
          </div>
        <%elsif flash[:error]%>   
          <div class="alert alert danger">
            <button type="button" class="close" data-dismiss="alert"> &times; </button>
            <%= flash[:error] %>
          </div>
        <% elsif flash[:alert] %> 
          <div class="alert alert warning">
            <button type="button" class="close" data_dismiss="alert"> &times; </button>
          <%= flash[:alert] %>
          </div>
        <% end %>
        </div>
      </div>  
      
      <%= yield %>
    </div>

  </body>
</html>
